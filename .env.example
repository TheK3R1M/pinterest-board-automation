# Pinterest Login Credentials
PINTEREST_EMAIL=your.email@example.com
PINTEREST_PASSWORD=your_secure_password

# Chrome Profile Path (optional - Windows example)
# CHROME_PROFILE_PATH=C:\Users\YourUsername\AppData\Local\Google\Chrome\User Data

# Board Settings
SOURCE_BOARD_URL=https://www.pinterest.com/username/source-board/
TARGET_BOARD_NAME=Target Board

# Selenium Settings
HEADLESS_MODE=false
SCROLL_PAUSE_TIME=0.8
# Note: MAX_SCROLLS removed - now uses smart auto-scroll detection
RANDOM_DELAY_MIN=2
RANDOM_DELAY_MAX=5

# Log Settings
LOG_FAILED_PINS=true